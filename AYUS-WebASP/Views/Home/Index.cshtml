                            <thead>
                                <tr>
                                    <th>CLIENT</th>
                                    <th>MECHANIC</th>
                                    <th>DATE</th>
                                    <th>STATUS</th>
                                </tr>
                            </thead>
                            <tbody id="notif-completed">
                                <!-- JAVASCRIPT WILL POPULATE THIS -->
                            </tbody>
                        </table>
