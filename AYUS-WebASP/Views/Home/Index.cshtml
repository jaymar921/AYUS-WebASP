                </div>
                <br>
                <br>
                <table>
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Role</th>
                            <th>Rating</th>
                            <th><i class="fa-solid fa-globe"></i> Online</th>
                            <th><i class="fa-solid fa-lock"></i> Restricted</th>
                        </tr>
                    </thead>
                    <tbody id="accounts-data">
                        <!-- JAVASCRIPT WILL POPULATE THIS -->
                    </tbody>
