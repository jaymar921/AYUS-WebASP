        </div>
    </div>

    <!-- EMAIL MODAL -->

    <div id="user_confirm_modal" class="modal top0 hidden">
        <br>
        <section class="tab-btns">
            <button onclick="closeWindow(document.getElementById('user_confirm_modal'))"><i class="fa-solid fa-xmark"></i></button>
        </section>
